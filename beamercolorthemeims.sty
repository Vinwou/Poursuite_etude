\mode<presentation>

% Theme colors
\definecolor{IMSBlue}{HTML}{023B88}
\definecolor{IMSOrange}{HTML}{D87237}

% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=white,bg=gray}
\setbeamercolor*{author}{fg=white,bg=gray}
\setbeamercolor*{date}{fg=white,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{framesubtitle}{fg=white}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=IMSBlue,fg=white}
\setbeamercolor{block title alerted}{bg=IMSOrange,fg=white}
\setbeamercolor{block title example}{bg=IMSBlue,fg=white}
\setbeamercolor{block body}{bg=IMSBlue!15,fg=black}
\setbeamercolor{block body alerted}{bg=IMSOrange!20,fg=black}
\setbeamercolor{block body example}{bg=IMSBlue!20,fg=black}

% Lists
\setbeamercolor*{item}{fg=IMSBlue}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=IMSBlue!10}

% Verse
\setbeamercolor*{verse}{fg=black,bg=IMSBlue!10}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=IMSBlue!10}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}


\mode
<all>